{% extends 'PetramasMainBundle::layout.html.twig' %}

{% block content -%}
                <h1>Indicador list</h1>
                <table class="records_list">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Estandar</th>
                            <th>Inferior</th>
                            <th>Superior</th>
                            <th>Valor</th>
                            <th>Observacion</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities -%}
                        <tr>
                            <td><a href="{{ path('indicador_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.nombre }}</td>
                            <td>{{ entity.estandar }}</td>
                            <td>{{ entity.inferior }}</td>
                            <td>{{ entity.superior }}</td>
                            <td>{{ entity.valor }}</td>
                            <td>{{ entity.observacion }}</td>
                            <td>
                            <ul>
                                <li>
                                    <a href="{{ path('indicador_show', { 'id': entity.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('indicador_edit', { 'id': entity.id }) }}">edit</a>
                                </li>
                            </ul>
                            </td>
                        </tr>
                        {% endfor -%}
                    </tbody>
                </table>
                <ul>
                    <li>
                        <a href="{{ path('indicador_new') }}">
                            Create a new entry
                        </a>
                    </li>
                </ul>
{% endblock %}
