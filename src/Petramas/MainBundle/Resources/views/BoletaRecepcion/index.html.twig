{% extends 'PetramasMainBundle::layout.html.twig' %}

{% block content -%}
    <h1>BoletaRecepcion list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fechaingreso</th>
                <th>Fechasalida</th>
                <th>Total</th>
                <th>Tara</th>
                <th>Neto</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('boletarecepcion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.fechaIngreso %}{{ entity.fechaIngreso|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaSalida %}{{ entity.fechaSalida|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.total }}</td>
                <td>{{ entity.tara }}</td>
                <td>{{ entity.neto }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('boletarecepcion_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('boletarecepcion_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('boletarecepcion_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
