{% extends 'PetramasMainBundle::layout.html.twig' %}

{% block content %}
<h4>Nueva Unidad</h4>
{{ form_start(form, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
    {{ form_errors(form) }}
    <div class="form-group{% if form.marca.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(form.marca, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.marca, {'attr': {'class': 'form-control'}}) }}
            {% if form.marca.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ form.marca.vars.errors[0].message }}
