            {{ form_widget(form.kilometraje, {'attr': {'class': 'form-control'}}) }}
            {% if form.kilometraje.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ form.kilometraje.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
