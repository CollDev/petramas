            {{ form_widget(edit_form.kilometraje, {'attr': {'class': 'form-control'}}) }}
            {% if edit_form.kilometraje.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ edit_form.kilometraje.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="form-group{% if edit_form.tiempo.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(edit_form.tiempo, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
