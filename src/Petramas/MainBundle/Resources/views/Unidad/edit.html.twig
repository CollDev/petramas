{% extends 'PetramasMainBundle::layout.html.twig' %}

{% block content %}
<h4>Editar Unidad</h4>
{{ form_start(edit_form, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
    {{ form_errors(edit_form) }}
    <div class="form-group{% if edit_form.marca.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(edit_form.marca, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
