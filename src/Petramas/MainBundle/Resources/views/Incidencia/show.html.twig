{% extends 'PetramasMainBundle::layout.html.twig' %}

{% block content -%}
<h1>Incidencia</h1>
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Fechaincidencia</th>
            <td>{{ entity.fechaIncidencia|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Fecharesolucion</th>
            <td>{{ entity.fechaResolucion|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Maquinaria</th>
            <td>{{ entity.maquinaria }}</td>
        </tr>
        <tr>
            <th>Observacion</th>
            <td>{{ entity.observacion }}</td>
        </tr>
        <tr>
            <th>Solucion</th>
            <td>{{ entity.solucion }}</td>
        </tr>
    </tbody>
</table>
<a class="btn btn-info pull-right" href="{{ path('incidencia') }}">Volver</a>
<a class="btn btn-warning pull-right" href="{{ path('incidencia_edit', { 'id': entity.id }) }}">Editar</a>
{{ form(delete_form) }}
{% endblock %}
