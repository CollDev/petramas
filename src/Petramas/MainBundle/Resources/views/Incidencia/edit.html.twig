            <span class="help-block">
                {{ edit_form.unidad.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
{{ form_end(edit_form) }}
{{ form(delete_form) }}
<a class="btn btn-info pull-right" href="{{ path('incidencia') }}">Volver</a>
{% endblock %}