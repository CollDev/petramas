{% extends 'PetramasMainBundle::layout.html.twig' %}

{% block content %}
<h4>Editar Incidencia</h4>
{{ form_start(edit_form, {'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}
    {{ form_errors(edit_form) }}
    <div class="form-group{% if edit_form.fechaIncidencia.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(edit_form.fechaIncidencia, null, {'label_attr': {'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10 input-group datetimepicker">
            {{ form_widget(edit_form.fechaIncidencia, {'attr': {'class': 'form-control', 'data-format': 'YYYY/MM/DD HH:mm:ss'} }) }}
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
            {% if edit_form.fechaIncidencia.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ edit_form.fechaIncidencia.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="form-group{% if edit_form.maquinaria.vars.errors[0].message is defined %} has-error{% endif %}">
