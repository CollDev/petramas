            {{ form_widget(edit_form.maquinaria, {'attr': {'class': 'form-control'} }) }}
            {% if edit_form.maquinaria.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ edit_form.maquinaria.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
