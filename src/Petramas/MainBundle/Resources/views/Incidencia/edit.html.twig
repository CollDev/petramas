            {% if edit_form.observacion.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ edit_form.observacion.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="form-group{% if edit_form.tipo_incidencia.vars.errors[0].message is defined %} has-error{% endif %}">
