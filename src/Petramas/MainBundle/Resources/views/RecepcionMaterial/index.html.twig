{% extends 'PetramasMainBundle::layout.html.twig' %}

{% block content -%}
                <h1>RecepcionMaterial list</h1>
                <table class="records_list">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Fechaingreso</th>
                            <th>Cantidad</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities -%}
                        <tr>
                            <td><a href="{{ path('recepcionmaterial_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{% if entity.fechaIngreso %}{{ entity.fechaIngreso|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{{ entity.cantidad }}</td>
                            <td>
                            <ul>
                                <li>
                                    <a href="{{ path('recepcionmaterial_show', { 'id': entity.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('recepcionmaterial_edit', { 'id': entity.id }) }}">edit</a>
                                </li>
                            </ul>
                            </td>
                        </tr>
                        {% endfor -%}
                    </tbody>
                </table>
                <ul>
                    <li>
                        <a href="{{ path('recepcionmaterial_new') }}">
                            Create a new entry
                        </a>
                    </li>
                </ul>
{% endblock %}
