            {{ form_widget(form.importe, {'attr': {'class': 'form-control'}}) }}
            {% if form.importe.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ form.importe.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="form-group{% if form.cliente.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(form.cliente, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
