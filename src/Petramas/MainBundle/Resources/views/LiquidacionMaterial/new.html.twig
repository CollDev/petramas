{% extends 'PetramasMainBundle::layout.html.twig' %}

{% block content %}
<h4>Nueva Liquidaci√≥n Material</h4>
{{ form_start(form, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
