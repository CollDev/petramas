{% extends 'PetramasMainBundle::layout.html.twig' %}

{% block content %}
<h4>Editar Pedido</h4>
{{ form_start(edit_form, {'attr': {'class': 'form-horizontal', 'role': 'form'} }) }}
    {{ form_errors(edit_form) }}
    <div class="form-group{% if edit_form.fechaProgramacion.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(edit_form.fechaProgramacion, null, {'label_attr': {'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10 input-group datetimepicker">
            {{ form_widget(edit_form.fechaProgramacion, {'attr': {'class': 'form-control', 'data-format': 'YYYY/MM/DD HH:mm:ss'} }) }}
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
            {% if edit_form.fechaProgramacion.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ edit_form.fechaProgramacion.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="form-group{% if edit_form.cliente.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(edit_form.cliente, null, {'label_attr': {'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.cliente, {'attr': {'class': 'form-control'} }) }}
            {% if edit_form.cliente.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ edit_form.cliente.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="form-group{% if edit_form.estado.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(edit_form.estado, null, {'label_attr': {'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.estado, {'attr': {'class': 'form-control'} }) }}
            {% if edit_form.estado.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ edit_form.estado.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="form-group{% if edit_form.factura.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(edit_form.factura, null, {'label_attr': {'class': 'col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.factura, {'attr': {'class': 'form-control'} }) }}
            {% if edit_form.factura.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ edit_form.factura.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
{{ form_end(edit_form) }}
{{ form(delete_form) }}
<a class="btn btn-info pull-right" href="{{ path('pedido') }}">Volver</a>
{% endblock %}