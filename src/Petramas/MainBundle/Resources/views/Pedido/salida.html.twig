{% extends 'PetramasMainBundle::layout.html.twig' %}

{% block content%}
                <h1>
                    Registrar salida de pedidos
                </h1>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>NÂº</th>
                                <th>Cliente</th>
                                <th>Factura</th>
                                <th>Fecha de programacion</th>
                                <th>Estado</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities -%}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ entity.cliente.razonsocial }}</td>
                                <td>{{ entity.factura.codigo }}</td>
                                <td>{% if entity.fechaProgramacion %}{{ entity.fechaProgramacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{{ entity.estado.nombre }}</td>
                                <td>
                                    <a class="btn btn-info btn-xs entity" href="{{ path('pedido_show', { 'id': entity.id }) }}" rel="tooltip" title="Detalle"><span class="glyphicon glyphicon-eye-open"></span></a>
                                    <a class="btn btn-warning btn-xs entity-submit-registrar_salida" href="{{ path('pedido_registrar', { 'id': entity.id }) }}" rel="tooltip" title="Registrar"><span class="glyphicon glyphicon-check"></span></a>
                                </td>
                            </tr>
                            {% endfor -%}
                        </tbody>
                    </table>
                </div>
{% endblock %}