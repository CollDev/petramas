{% extends 'PetramasMainBundle::layout.html.twig' %}

{% block content %}
<h4>Editar Pedido Detalle</h4>
{{ form_start(edit_form, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
    {{ form_errors(edit_form) }}
    {{ form_widget(edit_form.pedido) }}
    <div class="form-group{% if edit_form.material.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(edit_form.material, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.material, {'attr': {'class': 'form-control'}}) }}
            {% if edit_form.material.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ edit_form.material.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="form-group{% if edit_form.cantidad.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(edit_form.cantidad, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.cantidad, {'attr': {'class': 'form-control'}}) }}
            {% if edit_form.cantidad.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ edit_form.cantidad.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Importe</label>
        <div class="col-sm-10" id="petramas_mainbundle_pedidodetalle_importe">
        </div>
    </div>
{{ form_end(edit_form) }}
{{ form(delete_form) }}
<a class="btn btn-info pull-right" href="{{ path('pedido_show', { 'id': edit_form.pedido.vars.value }) }}">Volver</a>
{% endblock %}