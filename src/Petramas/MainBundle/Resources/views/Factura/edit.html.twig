{% extends 'PetramasMainBundle::layout.html.twig' %}

{% block content %}
<h4>Editar Factura</h4>
{{ form_start(edit_form, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
    {{ form_errors(edit_form) }}
    <div class="form-group{% if edit_form.codigo.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(edit_form.codigo, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.codigo, {'attr': {'class': 'form-control'}}) }}
            {% if edit_form.codigo.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ edit_form.codigo.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="form-group{% if edit_form.total.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(edit_form.total, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.total, {'attr': {'class': 'form-control'}}) }}
            {% if edit_form.total.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ edit_form.total.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="form-group{% if edit_form.fecha.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(edit_form.fecha, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10 input-group datetimepicker">
            {{ form_widget(edit_form.fecha, {'attr': {'class': 'form-control', 'data-format': 'YYYY/MM/DD HH:mm:ss'}}) }}
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
            {% if edit_form.fecha.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ edit_form.fecha.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="form-group{% if edit_form.cliente.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(edit_form.cliente, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.cliente, {'attr': {'class': 'form-control'}}) }}
            {% if edit_form.cliente.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ edit_form.cliente.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
{{ form_end(edit_form) }}
{{ form(delete_form) }}
<a class="btn btn-info pull-right" href="{{ path('factura') }}">Volver</a>
{% endblock %}