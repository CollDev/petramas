{% extends 'PetramasMainBundle::layout.html.twig' %}

{% block content %}
<h4>Nueva Boleta Material</h4>
{{ form_start(form, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
    {{ form_errors(form) }}
    <div class="form-group{% if form.neto.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(form.neto, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.neto, {'attr': {'class': 'form-control'}}) }}
            {% if form.neto.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ form.neto.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="form-group{% if form.boleta_recepcion.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(form.boleta_recepcion, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.boleta_recepcion, {'attr': {'class': 'form-control'}}) }}
            {% if form.boleta_recepcion.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ form.boleta_recepcion.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="form-group{% if form.tarifa.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(form.tarifa, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.tarifa, {'attr': {'class': 'form-control'}}) }}
            {% if form.tarifa.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ form.tarifa.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
{{ form_end(form) }}
<a class="btn btn-info pull-right" href="{{ path('boletamaterial') }}">Volver</a>
{% endblock %}
