{% extends 'PetramasMainBundle::layout.html.twig' %}

{% block content %}
<h4>Nuevo Material</h4>
{{ form_start(form, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
    {{ form_errors(form) }}
    <div class="form-group{% if form.nombre.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(form.nombre, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
            {% if form.nombre.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ form.nombre.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="form-group{% if form.stock.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(form.stock, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
            {% if form.stock.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ form.stock.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="form-group{% if form.tarifa.vars.errors[0].message is defined %} has-error{% endif %}">
        {{ form_label(form.tarifa, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.tarifa, {'attr': {'class': 'form-control'}}) }}
            {% if form.tarifa.vars.errors[0].message is defined %}
            <span class="help-block">
                {{ form.tarifa.vars.errors[0].message }}
            </span>
            {% endif %}
        </div>
    </div>
{{ form_end(form) }}
<a class="btn btn-info pull-right" href="{{ path('material') }}">Volver</a>
{% endblock %}